<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#767272"
    android:padding="5dp"
    android:orientation="vertical">

    <!--TextView for the heading-->
    <TextView
        android:id="@+id/heading_where_to_sort_it"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading_text_size"
        android:layout_marginBottom="5dp"
        android:text="@string/heading_where_to_sort_it"/>

    <!--Text field to enter item-->
    <EditText
        android:id="@+id/where_to_sort_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/hint_where_to_sort_it"
        android:inputType="text"
        android:layout_marginBottom="5dp"
        android:background="@color/white"/>

    <!--Button Where-->
    <Button
        android:id="@+id/where_to_sort_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:text="@string/where_to_sort_button"/>

    <!--TextView for the result-->
    <TextView
        android:id="@+id/where_to_sort_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"/>

